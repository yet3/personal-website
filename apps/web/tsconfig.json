{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$assets/*": ["./src/assets/*"],
      "$common/*": ["./src/common/*"],
      "$layouts/*": ["./src/layouts/*"],
      "$modules/*": ["./src/modules/*"],
      "$lib/*": ["./src/lib/*"],
      "$styles/*": ["./src/styles/*"],
      "$types/*": ["./src/types/*"]
    }
  }
}
