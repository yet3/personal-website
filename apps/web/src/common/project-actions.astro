---
import Button, { BtnSize } from "./button.svelte";

interface Props {
  class?: string;
  delay?: string;

  repoHref?: string;
  appHref?: string;
}
const { class: className, delay, appHref, repoHref } = Astro.props;
---

<div
  class:list={["flex items-center justify-center", className]}
  style={delay
    ? {
        "--delay": delay,
      }
    : undefined}
>
  {
    repoHref && (
      <Button size={BtnSize.Sm} class="mr-2" href={repoHref}>
        Open repo
      </Button>
    )
  }
  {
    appHref && (
      <Button size={BtnSize.Sm} href={appHref}>
        Open app
      </Button>
    )
  }
</div>
